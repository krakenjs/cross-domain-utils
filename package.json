{
  "name": "@krakenjs/cross-domain-utils",
  "version": "3.0.2",
  "description": "Utilities for dealing with cross-domain windows.",
  "main": "dist/cross-domain-utils.js",
  "module": "lib/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run test && npm run babel && npm run webpack && npm run build:types",
    "build:flow": "find . -type f -not -path './node_modules/*' -name '*.d.ts' -exec sh -c 'flowgen --add-flow-header $1 -o ${1%.*.*}.js.flow' _ '{}' \\;",
    "build:tsc": "tsc src/* --outDir ./dist/esm --declaration --emitDeclarationOnly",
    "build:types": "npm run build:tsc && npm run build:flow",
    "webpack": "cross-env NODE_ENV=production babel-node --plugins=transform-es2015-modules-commonjs ./node_modules/.bin/webpack --progress --output-path dist",
    "babel": "cross-env NODE_ENV=production babel src/ --out-dir ./dist/esm/ --extensions .ts,.tsx",
    "karma": "cross-env NODE_ENV=test babel-node --trace-deprecation --presets '@babel/preset-env' ./node_modules/.bin/karma start",
    "tsc": "tsc",
    "test": "npm run lint && npm run tsc --no-emit && npm run karma",
    "lint": "eslint --ext ts,tsx,js,jsx src/ test/",
    "clean": "rimraf dist coverage",
    "reinstall": "rimraf flow-typed && rimraf node_modules && npm install && flow-typed install",
    "prerelease": "npm run clean && npm run build && git add dist && git commit -m 'ci: check in dist folder' || echo 'Nothing to distribute'",
    "release": "standard-version",
    "postrelease": "git push && git push --follow-tags && npm publish",
    "debug": "cross-env NODE_ENV=debug",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/krakenjs/cross-domain-utils.git"
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "hidden": false
      },
      {
        "type": "docs",
        "hidden": false
      },
      {
        "type": "style",
        "hidden": false
      },
      {
        "type": "refactor",
        "hidden": false
      },
      {
        "type": "perf",
        "hidden": false
      },
      {
        "type": "test",
        "hidden": false
      },
      {
        "type": "ci",
        "hidden": true
      }
    ]
  },
  "keywords": [
    "template"
  ],
  "license": "Apache-2.0",
  "files": [
    "dist/"
  ],
  "readmeFilename": "README.md",
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@krakenjs/grumbler-scripts": "^6.0.2",
    "@types/chai": "^4.3.0",
    "@types/jest": "^27.0.3",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "flow-bin": "0.155.0",
    "flowgen": "^1.16.0",
    "husky": "^7.0.4",
    "mocha": "^4",
    "standard-version": "^9.3.2",
    "ts-node": "^10.5.0",
    "typescript": "4.5.5"
  }
}
